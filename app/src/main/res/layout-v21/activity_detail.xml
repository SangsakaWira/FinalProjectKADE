<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:id="@+id/sv_detail"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.detail.DetailActivity">

        <RelativeLayout android:padding="@dimen/activity_horizontal_margin" android:layout_width="match_parent" android:layout_height="wrap_content">

            <android.support.v4.widget.ContentLoadingProgressBar
                    android:id="@+id/clp_detail_matches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    style="@style/Base.Widget.AppCompat.ProgressBar"/>

            <LinearLayout
                    android:id="@+id/ll_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <GridLayout
                        android:layout_margin="8dp"
                        android:id="@+id/grid_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="11"
                        android:columnCount="3" android:baselineAligned="false" tools:ignore="UselessParent">
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_row="0"
                              android:layout_column="0"
                              android:textStyle="bold"
                              android:text="@string/tanggal"
                              android:textSize="18sp"
                              android:id="@+id/tv_tanggal"
                              android:textAlignment="center"
                              android:textColor="@color/colorPrimaryDark"
                              android:layout_columnSpan="3"/>
                    <!--Logo team-->
                    <ImageView android:src="@mipmap/ic_launcher"
                               android:layout_width="0dp"
                               android:layout_columnWeight="1"
                               android:layout_height="wrap_content"
                               android:layout_column="0"
                               android:layout_row="1"
                               android:id="@+id/detail_logo_home_team" android:contentDescription="@string/todo"/>
                    <TextView android:text="@string/vs" android:layout_width="0dp"
                              android:layout_columnWeight="1"
                              android:layout_row="1"
                              android:layout_gravity="center_vertical"
                              android:id="@+id/tv_home_score"
                              android:textStyle="bold"
                              android:layout_height="wrap_content"
                              android:textAlignment="center"
                              android:layout_column="1"/>
                    <ImageView android:src="@mipmap/ic_launcher" android:layout_width="0dp"
                               android:layout_columnWeight="1"
                               android:layout_row="1"
                               android:layout_height="wrap_content"
                               android:layout_column="2"
                               android:id="@+id/detail_logo_away_team" android:contentDescription="@string/todo"/>
                    <!--Name team-->
                    <TextView
                            android:text="@string/home_team"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:layout_row="2"
                            android:textSize="14sp"
                            android:layout_column="0"
                            android:id="@+id/tv_home_team_name"
                            android:textStyle="bold"/>
                    <TextView
                            android:text="@string/away_team"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:padding="8dp"
                            android:layout_column="2"
                            android:textAlignment="center"
                            android:layout_row="2"
                            android:textSize="14sp"
                            android:id="@+id/tv_away_team_name"
                            android:textStyle="bold"/>
                    <!--Goals-->
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_home_goals"
                            android:layout_column="0"
                            android:layout_row="3"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/goals"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:layout_column="1"
                            android:textAlignment="center"
                            android:layout_row="3"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_away_goals"
                            android:layout_column="2"
                            android:layout_row="3"
                    />
                    <!--Shots-->
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_home_shots"
                            android:layout_column="0"
                            android:layout_row="4"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/shots"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:layout_column="1"
                            android:textAlignment="center"
                            android:layout_row="4"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_away_shots"
                            android:layout_column="2"
                            android:layout_row="4"
                    />

                    <!--Goalkeeper-->
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_home_goalkeeper"
                            android:layout_column="0"
                            android:layout_row="6"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/goalkeeper"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:layout_column="1"
                            android:textAlignment="center"
                            android:layout_row="6"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_away_goalkeeper"
                            android:layout_column="2"
                            android:layout_row="6"
                    />
                    <!--Defense-->
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_defense_home_team"
                            android:layout_column="0"
                            android:layout_row="7"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/defense"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:layout_column="1"
                            android:textAlignment="center"
                            android:layout_row="7"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_defense_away_team"
                            android:layout_column="2"
                            android:layout_row="7"
                    />
                    <!--Midfield-->
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_midfield_home_team"
                            android:layout_column="0"
                            android:layout_row="8"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/midfield"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:layout_column="1"
                            android:textAlignment="center"
                            android:layout_row="8"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_midfield_away_team"
                            android:layout_column="2"
                            android:layout_row="8"
                    />
                    <!--Forward-->
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_forward_home_team"
                            android:layout_column="0"
                            android:layout_row="9"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/forward"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:layout_column="1"
                            android:textAlignment="center"
                            android:layout_row="9"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_forward_away_team"
                            android:layout_column="2"
                            android:layout_row="9"
                    />
                    <!--Subtitues-->
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_subtitutes_home_team"
                            android:layout_column="0"
                            android:layout_row="10"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/subtitutes"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:layout_column="1"
                            android:textAlignment="center"
                            android:layout_row="10"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_columnWeight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:padding="8dp"
                            android:id="@+id/tv_subtitutes_away_team"
                            android:layout_column="2"
                            android:layout_row="10"
                    />
                </GridLayout>
            </LinearLayout>


        </RelativeLayout>

</ScrollView>